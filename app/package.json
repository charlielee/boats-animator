{
    "main": "index.html",
    "description": "A free stop motion animation program created using HTML5, JavaScript and WebRTC.",
    "name": "Boats Animator",
    "nodejs": true,
    "webkit": {
        "page-cache": false,
        "java": false,
        "plugin": false
    },
    "window": {
        "fullscreen": false,
        "resizable": true,
        "always_on_top": false,
        "nodejs": true,
        "frame": true,
        "title": "Boats Animator",
        "kiosk": false,
        "kiosk_emulation": false,
        "exe_icon": "icons/icon.png",
        "width": 730,
        "min_width": 730,
        "min_height": 450,
        "as_desktop": false,
        "visible": true,
        "show": true,
        "position": "center",
        "show_in_taskbar": true,
        "height": 450,
        "mac_icon": "icons/icon.png",
        "transparent": false,
        "icon": "icons/icon.png"
    },
    "version": "0.7.1",
    "repository": {
      "type": "git",
      "url": "git+https://github.com/BoatsAreRockable/Boats-Animator.git"
    },
    "chromium-args": "--mixed-context",
    "engines": {
        "npm": "^3.7.3"
    },
    "dependencies": {
        "mkdirp": "^0.5.1"
    },
    "scripts": {
        "postinstall": "cp node_modules/mkdirp/index.js lib/mkdirp.js"
  }
}
